@model ProfileViewModel

@{
    ViewData["Title"] = "Profile";
}

<h3>@ViewData["Title"]</h3>
<div class="row">
    <div class="col-md-6">
        <div class="form-group">
            <label>Username</label>
            <input type="text" class="form-control" value="@Model.Username" disabled />
        </div>
        <div class="form-group">
            <label>Email</label>
            <input type="text" class="form-control" value="@Model.Email" disabled />
        </div>
        <div class="form-group">
            <label>Phone number</label>
            <input type="text" class="form-control" value="@Model.PhoneNumber" disabled />
        </div>
        <div class="form-group">
            <label>First name</label>
            <input type="text" class="form-control" value="@Model.Firstname" disabled />
        </div>
        <div class="form-group">
            <label>Last name</label>
            <input type="text" class="form-control" value="@Model.Lastname" disabled />
        </div>
        <div class="form-group">
            <label>Major</label>
            <input type="text" class="form-control" value="@Model.Major" disabled />
        </div>
        <div class="form-group">
            <label>Specialization</label>
            <input type="text" class="form-control" value="@Model.Specialization" disabled />
        </div>
        <div class="form-group">
            <label>Enrollment year</label>
            <input type="text" class="form-control" value="@Model.EnrollmentYear" disabled />
        </div>
        <div class="form-group">
            <label>Financial Balance</label>
            <input type="text" class="form-control" value="@Model.Financialbalance" disabled />
        </div>
    </div>
</div>

<h4>Courses</h4>
<table class="table">
    <thead>
        <tr>
            <th>Course</th>
            <th>Credits</th>
            <th>Tuition fee</th>
            <th>Ects</th>
            <th>Room number</th>
            <th>Class Time</th>
            <th>Faculty</th>
            <th>Department</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var course in Model.Courses)
        {
            <tr>
                <td>@course.CourseName</td>
                <td>@course.Credits</td>
                <td>@course.Tuitionfee</td>
                <td>@course.Ects</td>
                <td>@course.Roomnumber</td>
                <td>@course.Classtime</td>
                <td>@course.Facultyname</td>
                <td>@course.Departmentname</td>
            </tr>
        }
    </tbody>
</table>

<h4>Enrollments</h4>
<table class="table">
    <thead>
        <tr>
            <th>Course Name</th>
            <th>Semester</th>
            <th>Lab Grade</th>
            <th>Exam Grade</th>
            <th>Final Grade</th>
            <th>Fee Status</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var enrollment in Model.Enrollments)
        {
            <tr>
                <td>@enrollment.Course.Coursename</td>
                <td>@enrollment.Semester</td>
                <td>@enrollment.Labgrade</td>
                <td>@enrollment.Examgrade</td>
                <td>@enrollment.Finalgrade</td>
                <td>@enrollment.Feestatus</td>
            </tr>
        }
    </tbody>
</table>

<h4>Financial Aids</h4>
<table class="table">
    <thead>
        <tr>
            <th>Type</th>
            <th>Amount</th>
            <th>Year</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var aid in Model.FinancialAids)
        {
            <tr>
                <td>@aid.Aidtype</td>
                <td>@aid.Amount</td>
                <td>@aid.Awardyear</td>
            </tr>
        }
    </tbody>
</table>

<h4>Payments</h4>
<table class="table">
    <thead>
        <tr>
            <th>Payment Date</th>
            <th>Amount</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var payment in Model.Payments)
        {
            <tr>
                <td>@payment.Paymentdate</td>
                <td>@payment.Amount</td>
            </tr>
        }
    </tbody>
</table>
